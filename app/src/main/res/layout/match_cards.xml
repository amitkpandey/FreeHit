<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="cards main container">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/match_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:textSize="12sp"
                tools:text="2nd ODI" />

            <TextView
                android:id="@+id/match_series_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/match_name"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:text="-"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/series_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/match_series_separator"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:textSize="12sp"

                tools:text="India Tour of SriLanka,5 ODIs,2010" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/score_team_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/team_logo_1"
                        android:textSize="20sp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        tools:text="100/3" />

                    <TextView
                        android:id="@+id/overs_team_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/score_team_1"
                        android:layout_below="@id/score_team_1"
                        android:paddingTop="40dp"
                        android:paddingEnd="30dp"
                        android:textSize="15sp"
                        tools:text="20" />

                    <TextView
                        android:id="@+id/score2_team_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/overs_team_1"
                        android:layout_toEndOf="@+id/team_logo_1"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:textSize="20sp"
                        tools:text="100/3" />

                    <ImageView
                        android:id="@+id/team_logo_1"
                        android:layout_width="65dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:paddingTop="20dp"
                        android:src="@drawable/matches"
                        android:tag="image_tag" />

                    <TextView
                        android:id="@+id/shortname_team_1"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/score_team_1"
                        android:paddingTop="22dp"
                        android:paddingEnd="25dp"
                        android:textSize="20sp"
                        tools:text="SN" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/team_logo_2"
                        android:layout_width="65dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:paddingTop="20dp"
                        android:src="@drawable/matches"
                        android:tag="image_tag" />

                    <TextView
                        android:id="@+id/overs_team_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/score_team_2"
                        android:layout_below="@+id/score_team_2"
                        android:paddingStart="30dp"
                        android:paddingTop="40dp"
                        android:textSize="15sp"
                        tools:text="20" />

                    <TextView
                        android:id="@+id/shortname_team_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/score_team_2"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="22dp"
                        android:paddingStart="25dp"
                        android:textSize="20sp"
                        tools:text="BAN" />

                    <TextView
                        android:id="@+id/score_team_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/team_logo_2"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:textSize="20sp"
                        tools:text="100/3" />

                    <TextView
                        android:id="@+id/score2_team_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/overs_team_2"
                        android:layout_toStartOf="@+id/team_logo_2"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:textSize="20sp"
                        tools:text="100/3" />
                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/match_status_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                tools:text="Match in progress/ India won by 3 wickets" />

            <TextView
                android:id="@+id/target_leadby"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                tools:text="Target 189/lead by 100" />

            <TextView
                android:id="@+id/day"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                tools:text="Day 5"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/match_preview_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view"
        android:ellipsize="end"
        android:maxLines="10"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="40dp"
        android:text="Description of the match thats about to start cause people love to read . its a cricket match what the hell do you want to read , check the score watch the match ,sulk if your team lost or celebrate if your team and sleep . and yet you are still reading this . humans sure are weird creatures . stop reading now . Theres nothing of any use to you here just go sleep.STOP READING STOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READINGSTOP READING"
        android:textColor="@android:color/black"
        android:textSize="13sp" />

</RelativeLayout>


